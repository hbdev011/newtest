<h1>Listing deals</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Deal</th>
    <th>Description</th>
    <th>Site link</th>
    <th>Price</th>
    <th>Value</th>
    <th>Discount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @deals.each do |deal| %>
  <tr>
    <td><%= deal.title %></td>
    <td><%= deal.deal_id %></td>
    <td><%= deal.description %></td>
    <td><%= deal.site_link %></td>
    <td><%= deal.price %></td>
    <td><%= deal.value %></td>
    <td><%= deal.discount %></td>
    <td><%= link_to 'Show', deal %></td>
    <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
    <td><%= link_to 'Destroy', deal, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

